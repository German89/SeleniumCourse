<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="SuiteAll" verbose="2">

    <test name="Test pages from Goolge chrome" parallel="tests" thread-count="2">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="com.selenium.test.FacebookPageTest"/>
            <class name="com.selenium.test.OlePageTest"/>
        </classes>
    </test>

    <test name="Test pages from Goolge Firefox" parallel="tests" thread-count="2">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="com.selenium.test.FacebookPageTest"/>
            <class name="com.selenium.test.OlePageTest"/>
        </classes>
    </test>
</suite>
